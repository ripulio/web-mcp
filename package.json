{
  "name": "@ripul/web-mcp-monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run --workspaces --if-present build",
    "test": "vitest run",
    "lint": "npm run lint:format && npm run lint:js",
    "format": "prettier --write \"packages/*/{test,src}/**/*.ts\"",
    "lint:format": "prettier --check \"packages/*/{test,src}/**/*.ts\"",
    "lint:js": "eslint \"packages/*/{test,src}/**/*.ts\""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "globals": "^16.4.0",
    "@vitest/browser": "^4.0.15",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.15"
  }
}
