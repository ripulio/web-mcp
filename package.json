{
  "name": "@ripul/web-mcp-monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run --workspaces build",
    "test": "vitest run",
    "lint": "npm run lint:format && npm run lint:js",
    "format": "prettier --write \"packages/*/{test,src}/**/*.ts\"",
    "lint:format": "prettier --check \"packages/*/{test,src}/**/*.ts\"",
    "lint:js": "eslint \"packages/*/{test,src}/**/*.ts\""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "@vitest/browser": "^4.0.8",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.8"
  }
}
